#
# Actions OWL SoCs pinctrl drivers
#

if ARCH_OWL

config PINCTRL_OWL
	bool
	select PINMUX
	select GENERIC_PINCONF

config PINCTRL_S900
	bool "Actions S900 pin controller driver"
	depends on ARCH_OWL
	select PINCTRL_OWL
	help
	  Say yes here to support the gpio/pin control module on
	  Actions S900 SoC.
config PINCTRL_S700
	bool "Actions S700 pin controller driver"
	depends on ARCH_OWL
	select PINCTRL_OWL
	help
	  Say yes here to support the gpio/pin control module on
	  Actions S700 SoC.

config PINCTRL_ATS3605
	bool "Actions ATS3605 pin controller driver"
	depends on ARCH_OWL
	select PINCTRL_OWL
	help
	  Say yes here to support the gpio/pin control module on
	  Actions ATS3605 SoC.
endif
